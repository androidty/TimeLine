<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center">

        <TextView
            android:id="@+id/daytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/daytext"
            android:background="@drawable/ic_menu_gallery" />
    </RelativeLayout>

    <GridView
        android:layout_marginTop="20dp"
        android:id="@+id/icon_group1"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_below="@+id/top"
        android:layout_marginLeft="50dp"
        android:background="@android:color/transparent"
        android:horizontalSpacing="1dp"
        android:numColumns="12"
        android:padding="2dp"
        android:verticalSpacing="1dp" />

    <GridView
        android:id="@+id/icon_group2"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_below="@+id/icon_group1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"

        android:horizontalSpacing="1dp"
        android:numColumns="12"
        android:padding="2dp"
        android:verticalSpacing="1dp" />

    <GridView
        android:id="@+id/icon_group3"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_below="@+id/icon_group2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:horizontalSpacing="1dp"
        android:numColumns="12"
        android:padding="2dp"
        android:verticalSpacing="1dp" />

    <GridView
        android:id="@+id/icon_group4"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_below="@+id/icon_group3"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:horizontalSpacing="1dp"
        android:numColumns="12"
        android:padding="2dp"
        android:verticalSpacing="1dp" />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="00:00"
        android:layout_below="@+id/top"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="06:00"
        android:layout_below="@+id/icon_group1"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="12:00"
        android:layout_below="@+id/icon_group2"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="18:00"
        android:layout_below="@+id/icon_group3"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="00:00"
        android:layout_below="@+id/icon_group4"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_below="@+id/t1"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_below="@+id/t2"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_below="@+id/t3"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="85dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_below="@+id/t4"
        />

</RelativeLayout>